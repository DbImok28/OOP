<Page x:Class="lab6.Views.Windows.ProductInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:lab6.Views.Windows"
      xmlns:vm="clr-namespace:lab6.ViewModules"
      d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductInfoPage">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Click="Go_Home" Width="30" Height="30"/>
        <StackPanel Grid.Column="1" Grid.Row="1">
            <StackPanel Orientation="Horizontal">
                <Border Background="LightBlue" Margin="20" BorderThickness="1" BorderBrush="Gray" CornerRadius="15">
                    <Image Source="{Binding SelectedProduct.Image}" Width="150" Height="150" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2"></Image>
                </Border>
                <Border Background="#FFE5F7FD" Margin="2,20" BorderThickness="1" BorderBrush="Gray" CornerRadius="15">
                    <StackPanel>
                    <TextBlock Text="{Binding SelectedProduct.Name}" Margin="0,4"></TextBlock>
                    <TextBlock Text="{Binding SelectedProduct.FullName}" Margin="0,4"></TextBlock>
                    <TextBlock Text="{Binding SelectedProduct.Price, StringFormat=Цена {0}}" Margin="0,4"></TextBlock>
                </StackPanel>
                </Border>
            </StackPanel>
            <TextBlock Text="{Binding SelectedProduct.FullName}" Margin="20"></TextBlock>
        </StackPanel>
        
    </Grid>
</Page>
